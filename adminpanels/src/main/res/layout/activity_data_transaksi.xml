<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DataTransaksi">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPesanan"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorTop"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:id="@+id/spin_transaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_layout"
        android:elevation="4dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/toolbarPesanan"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

        <FrameLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spin_transaksi"
            android:layout_marginTop="10dp"/>
</RelativeLayout>