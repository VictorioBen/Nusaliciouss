<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_pembayaran_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="ID"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp"/>
                <TextView
                    android:id="@+id/btn_selesai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Selesai"
                    android:textSize="16sp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@android:color/black"
                    android:background="@drawable/bg_btn_save"/>
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penerima  : "
            android:textSize="16sp"/>
            <TextView
                android:id="@+id/textNamaPembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_textview"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="75dp"
                android:padding="5dp"
                android:text="Nama"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textAllCaps="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No HP : "
            android:textSize="16sp"/>
            <TextView
                android:id="@+id/textNoTelpPembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_textview"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="101dp"
                android:padding="5dp"
                android:text="08888"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/linear_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_layout"
                android:layout_marginLeft="5dp"
                android:visibility="visible"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah : "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textJumlahPembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="94dp"
                    android:layout_marginRight="100dp"
                    android:background="@drawable/border_textview"
                    android:padding="5dp"
                    android:text="50"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total : "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textTotalPembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="111dp"
                    android:layout_marginRight="100dp"
                    android:background="@drawable/border_textview"
                    android:padding="5dp"
                    android:text="150"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metode Pembayaran : "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textMetodePembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:background="@drawable/border_textview"
                    android:padding="5dp"
                    android:text="Gpay"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Petunjuk : "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textPetunjukPembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="84dp"
                    android:layout_marginRight="100dp"
                    android:background="@drawable/border_textview"
                    android:padding="5dp"
                    android:text="dpn warung"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat : "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textAlamatPembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/border_textview"
                    android:padding="5dp"
                    android:text="Jl kenangan"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
</androidx.cardview.widget.CardView>